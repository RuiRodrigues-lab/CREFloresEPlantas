@model CREFloresEPlantas.Models.Produtos
@{
    ViewData["Title"] = "Criar";
}
<br />

<h2 class="text-info">Criar Novo Produto</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h3>@ViewBag.message</h3>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Nome"></label>
            </div>
            <div class="col-5">
                <input asp-for="Nome" class="form-control" />
            </div>
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Preco"></label>
            </div>
            <div class="col-5">
                <input asp-for="Preco" class="form-control" />
            </div>
            <span asp-validation-for="Preco" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Imagem"></label>
            </div>
            <div class="col-5">
                <input asp-for="Imagem" class="form-control" type="file"/>
            </div>
            <span asp-validation-for="Imagem" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CorProduto"></label>
            </div>
            <div class="col-5">
                <input asp-for="CorProduto" class="form-control" />
            </div>
            <span asp-validation-for="CorProduto" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TiposProdutosId"></label>
            </div>
            <div class="col-5">
                <select asp-for="TiposProdutosId" asp-items="ViewBag.tipoProdutoId" class="form-control"></select>
                @*<input asp-for="TiposProdutosId" class="form-control" />*@
            </div>
            <span asp-validation-for="TiposProdutosId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SpecialTagId"></label>
            </div>
            <div class="col-5">
                <select asp-for="SpecialTagId" asp-items="ViewBag.TagId" class="form-control"></select>
                @*<input asp-for="SpecialTagId" class="form-control" />*@
            </div>
            <span asp-validation-for="SpecialTagId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Disponivel"></label>
            </div>
            <div class="col-5">
                <input asp-for="Disponivel" class="" type="checkbox"/>
            </div>
            <span asp-validation-for="Disponivel" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Guardar" />
            <a asp-action="Index" class="btn btn-success">Voltar a Lista</a>
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");}
}