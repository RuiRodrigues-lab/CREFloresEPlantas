@model CREFloresEPlantas.Models.TiposProdutos
@{
    ViewData["Title"] = "Apagar";
}
<br />

<h2 class="text-info">Apagar Tipo de Produto</h2>

<form asp-action="Delete" method="post">
    <div class="p-4 rounded border">
        <input type="hidden"asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TipoProduto"></label>
            </div>
            <div class="col-5">
                <input asp-for="TipoProduto" class="form-control" />
            </div>
            <span asp-validation-for="TipoProduto" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Apagar" />
            <a asp-action="Index" class="btn btn-success">Voltar a Lista</a>
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");}
}

