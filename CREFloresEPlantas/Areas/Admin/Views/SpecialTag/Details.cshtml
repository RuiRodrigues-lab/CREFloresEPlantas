@model CREFloresEPlantas.Models.SpecialTag
@{
    ViewData["Title"] = "Detalhes";
}
<br />

<h2 class="text-info">Detalhes do Tag</h2>

<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Nome"></label>
            </div>
            <div class="col-5">
                <input asp-for="Nome" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
            <a asp-action="Index" class="btn btn-success">Voltar a Lista</a>
            @*<input type="submit" class="btn btn-success" value="Voltar a Lista" />*@
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");}
}